@{
  ViewBag.Title = "Registro de Codeudores";
  Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<head>
</head>

@{

  if (TempData["openModal"] != null)
  {

    if (TempData["Error"] != null)
    {
      @await Component.InvokeAsync("Modal", new { tipo = "error", mensaje = TempData["Error"] })
      ;
    }
    else if (TempData["Success"] != null)
    {
      @await Component.InvokeAsync("Modal", new { tipo = "success", mensaje = TempData["Success"] })
      ;
    }
    else if (TempData["Confirmation"] != null)
    {
      @await Component.InvokeAsync("Modal", new { tipo = "confirmation", mensaje = TempData["Confirmation"], controlador =
      TempData["Controlador"], parametro = TempData["Parametro"], ID =
      TempData["ID"] })
;
  }
}
}

<section class="main-container">
  <div class="titulo-seccion">
    <h1>@ViewBag.Title</h1>
  </div>
  <div class="data-container">
    <div class="acciones">
      <a href="@Url.Action("Home", "Dashboard")" class="btn btn-regresar"><i class="fi fi-rr-undo"></i></a>
      <a href="@Url.Action("Crear", "Codeudores")" class="btn btn-nuevo"><i
          class="fi fi-rr-plus"></i><span>Agregar</span></a>
    </div>
    <div class="table-container">

      <!-- Tabla de datos -->
      <table id="table" class="table">
        <thead>
          <tr class="cabecera">
            <!-- Columnas dinámicas -->
            <th>
              <div class="th">Editar</div>
            </th>
            <th>
              <div class="th">
                <span>Codigo Codeudor</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Cedula</span>
              </div>
            </th>
            <th>
              <div class="th">
                <span>Primer Nombre</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Segundo Nombre</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Primer Apellido</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span> Segundo Apellido</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Direccion</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Sector</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Ciudad</span>
              </div>
            </th>
            <th>
              <div class="th">
                <span>Provincia</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Pais Nacimiento</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Telefono Principal</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Fecha Nacimiento</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Email</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Sexo</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Profesion</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Cargo</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Lugar Trabajo</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Direccion Trabajo</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Telefono Trabajo</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span>Ingreso Mensaules</span>
              </div>
            </th>

            <th>
              <div class="th">
                <span> Estatus</span>
              </div>
            </th>

            <th class="btn-eliminar">
              <div class="th">Eliminar</div>
            </th>
          </tr>
        </thead>
        <tbody>
          <!-- Ejemplo de filas dinámicas -->
          @foreach (var codeudor in Model)
          {
            <tr>
              <td>
                <a class="dato accion-editar" data-codigo-codeudor="@codeudor.CODIGO_CODEUDOR"
                  href="@Url.Action("Editar", "Codeudores", new { codigoCodeudor = @codeudor.CODIGO_CODEUDOR })"><i
                    class="fi fi-tc-pencil"></i></a>
              </td>
              <td>
                <div class="dato">@codeudor.CODIGO_CODEUDOR</div>
              </td>

              <td>
                <div class="dato">@codeudor.CEDULA</div>
              </td>

              <td>
                <div class="dato">@codeudor.P_NOMBRE</div>
              </td>

              <td>
                <div class="dato">@codeudor.S_NOMBRE</div>
              </td>

              <td>
                <div class="dato">@codeudor.P_APELLIDO</div>
              </td>

              <td>
                <div class="dato">@codeudor.S_APELLIDO</div>
              </td>

              <td>
                <div class="dato">@codeudor.DIRECCION</div>
              </td>

              <td>
                <div class="dato">@codeudor.NOMBRE_SECTOR</div>
              </td>

              <td>
                <div class="dato">@codeudor.NOMBRE_CIUDAD</div>
              </td>

              <td>
                <div class="dato">@codeudor.NOMBRE_PROVINCIA</div>
              </td>

              <td>
                <div class="dato">@codeudor.PAIS_NACIMIENTO</div>
              </td>

              <td>
                <div class="dato">@codeudor.TELEFONO_PRINCIPAL</div>
              </td>

              <td>
                <div class="dato">@codeudor.FECHA_NACIMIENTO</div>
              </td>

              <td>
                <div class="dato">@codeudor.EMAIL</div>
              </td>

              <td>
                <div class="dato">@codeudor.SEXO</div>
              </td>

              <td>
                <div class="dato">@codeudor.PROFESION</div>
              </td>

              <td>
                <div class="dato">@codeudor.CARGO</div>
              </td>

              <td>
                <div class="dato">@codeudor.LUGAR_TRABAJO</div>
              </td>

              <td>
                <div class="dato">@codeudor.DIRECCION_TRABAJO</div>
              </td>

              <td>
                <div class="dato">@codeudor.TELEFONO_TRABAJO</div>
              </td>

              <td>
                <div class="dato">@codeudor.INGRESOS_MENSUALES</div>
              </td>

              <td>
                <div class="dato">@codeudor.ESTATUS</div>
              </td>

              <td>
                <a class="dato accion-eliminar" data-codigo-codeudor="@codeudor.CODIGO_CODEUDOR"
                  href="@Url.Action("Eliminar", "Codeudores", new { codigoCodeudor = @codeudor.CODIGO_CODEUDOR })"><i
                    class="fi fi-tr-trash-xmark"></i></a>
              </td>
            </tr>
          }
        </tbody>
      </table>

      <!-- Menú flotante para ordenar -->
      <div id="sort-menu" style="display:none; position:absolute;">
        <ul>
          <li><button data-order="asc">Orden Ascendente</button></li>
          <li><button data-order="desc">Orden Descendente</button></li>
        </ul>
      </div>

    </div>
  </div>
</section>

<script src="~/js/Table.js"></script>