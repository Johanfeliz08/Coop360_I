@{
  ViewBag.Title = "Formulario Empleados";
  Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<head>
  <link rel="stylesheet" href="~/css/Empleados/FormEmpleados.css">
</head>

<section class="main-container">
  <div class="titulo-seccion">
    <h1>@ViewBag.Title</h1>
    <div class="acciones">
      <a href="@Url.Action("RegistroEmpleados", "Empleados")" class="btn btn-regresar"><i class="fi fi-rr-undo"></i></a>
      <a href="@Url.Action("Guardar", "Empleados")" class="btn btn-nuevo"><i
          class="fi fi-rr-plus"></i><span>Guardar</span></a>
    </div>
  </div>
  <div class="form-container">
    <form action="">
      <div class="campos-container">
        <div class="grupo informacion-personal">
          <div class="titulo-grupo" id="titulo">
            <h2>Informacion personal</h2>
          </div>
          <div class="campo" id="campo_cedula">
            <label for="cedula">Cedula</label>
            <input type="text" name="cedula" id="cedula">
          </div>
          <div class="campo" id="campo_p_nombre">
            <label for="p_nombre">Primer nombre</label>
            <input type="text" name="p_nombre" id="p_nombre">
          </div>
          <div class="campo" id="campo_s_nombre">
            <label for="s_nombre">Segundo nombre</label>
            <input type="text" name="s_nombre" id="s_nombre">
          </div>
          <div class="campo" id="campo_p_apellido">
            <label for="p_apellido">Primer apellido</label>
            <input type="text" name="p_apellido" id="p_apellido">
          </div>
          <div class="campo" id="campo_s_apellido">
            <label for="s_apellido">Segundo apellido</label>
            <input type="text" name="s_apellido" id="s_apellido">
          </div>
          <div class="campo" id="campo_fecha_nacimiento">
            <label for="fecha_nacimiento">Fecha de nacimiento</label>
            <input type="text" name="fecha_nacimiento" id="fecha_nacimiento">
          </div>
          <div class="campo" id="campo_sexo">
            <label for="sexo">Sexo</label>
            @* <input type="text" name="sexo" id="sexo"> *@
            <select name="sexo" id="sexo">
              <option value="default" disabled selected>Seleccionar</option>

              <option value="F">Femenino</option>
              <option value="M">Masculino</option>
            </select>
          </div>
          <div class="campo" id="campo_estado_civil">
            <label for="estado_civil">Estado civil</label>
            <select name="estado_civil" id="estado_civil">
              <option value="default" disabled selected>Seleccionar</option>
              <option value="Casado/a">Casado/a</option>
              <option value="Soltero/a">Soltero/a</option>
            </select>
            @* <input type="text" name="estado_civil" id="estado_civil"> *@
          </div>
          <div class="campo" id="campo_tipo_sangre">
            <label for="tipo_sangre">Tipo de sangre</label>
            <select name="tipo_sangre" id="tipo_sangre">
              <option value="default" disabled selected>Seleccionar</option>

              <option value="A+">A+</option>
              <option value="A-">A-</option>
              <option value="B+">B+</option>
              <option value="B-">B-</option>
              <option value="AB+">AB+</option>
              <option value="AB-">AB-</option>
              <option value="O+">O+</option>
              <option value="O-">O-</option>
            </select>
            @* <input type="text" name="tipo_sangre" id="tipo_sangre"> *@
          </div>
          <div class="campo" id="campo_pais_nacimiento">
            <label for="pais_nacimiento">Pais de nacimiento</label>
            <input type="text" name="pais_nacimiento" id="pais_nacimiento">
          </div>
        </div>
      </div>
      <div class="campos-container">
        <div class="grupo contacto">
          <div class="titulo-grupo" id="titulo-contacto">
            <h2>Contacto</h2>
          </div>
          <div class="campo" id="campo_direccion">
            <label for="direccion">Direccion</label>
            <input type="text" name="direccion" id="direccion">
          </div>
          <div class="campo" id="campo_telefono_principal">
            <label for="telefono_principal">Telefono principal</label>
            <input type="text" name="telefono_principal" id="telefono_principal">
          </div>
          <div class="campo" id="campo_telefono_secundario">
            <label for="telefono_secundario">Telefono secundario</label>
            <input type="text" name="telefono_secundario" id="telefono_secundario">
          </div>
          <div class="campo" id="campo_email">
            <label for="email">Email</label>
            <input type="text" name="email" id="email">
          </div>
        </div>
      </div>
      <div class="campos-container">
        <div class="grupo informacion-geografica">
          <div class="titulo-grupo" id="titulo-informacion-geografica">
            <h2>Informacion geografica</h2>
          </div>
          <div class="campo" id="campo_sector">
            <label for="sector">Sector</label>
            <select name="sector" id="sector">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var sector in @Model.Sectores)
              {

                <option id="@sector.ID_SECTOR" value="@sector.ID_SECTOR">@sector.NOMBRE</option>
              }
            </select>
            @* <input type="text" name="sector" id="sector"> *@
          </div>
          <div class="campo" id="campo_ciudad">
            <label for="ciudad">Ciudad</label>
            <select name="ciudad" id="ciudad">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var ciudad in @Model.Ciudades)
              {

                <option id="@ciudad.ID_CIUDAD" value="@ciudad.ID_CIUDAD">@ciudad.NOMBRE</option>
              }
            </select>
            @* <input type="text" name="ciudad" id="ciudad"> *@
          </div>
          <div class="campo" id="campo_provincia">
            <label for="provincia">Provincia</label>
            <select>
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var provincia in @Model.Provincias)
              {

                <option id="@provincia.ID_PROVINCIA" value="@provincia.ID_PROVINCIA">@provincia.NOMBRE</option>
              }
            </select>
            @* <input type="text" name="provincia" id="provincia"> *@
          </div>
          <div class="campo" id="campo_region">
            <label for="region">Region</label>
            <select>
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var region in @Model.Regiones)
              {

                <option id="@region.ID_REGION" value="@region.ID_REGION">@region.REGION</option>
              }
            </select>
            @* <input type="text" name="provincia" id="provincia"> *@
          </div>
        </div>
      </div>
      <div class="campos-container">
        <div class="grupo informacion-laboral ">
          <div class="titulo-grupo" id="titulo-informacion-laboral">
            <h2>Informacion laboral</h2>
          </div>
          <div class="campo" id="campo_frecuencia_cobro">
            <label for="frecuencia_cobro">Frecuencia cobro</label>
            <select name="frecuencia_cobro" id="frecuencia_cobro">
              <option value="default" disabled selected>Seleccionar</option>
              <option value="Semanal">Semanal</option>
              <option value="Quincenal">Quincenal</option>
              <option value="Mensual">Mensual</option>
            </select>
            @* <input type="text" name="frecuencia_cobro" id="frecuencia_cobro"> *@
          </div>
          <div class="campo" id="campo_cuenta_banco">
            <label for="cuenta_banco">Cuenta banco</label>
            <input type="text" name="cuenta_banco" id="cuenta_banco">
          </div>
          <div class="campo" id="campo_entidad_bancaria">
            <label for="entidad_bancaria">Entidad bancaria</label>
            <select name="entidad_bancaria" id="entidad_bancaria">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var entidad_bancaria in @Model.EntidadesBancarias)
              {
                <option id="@entidad_bancaria.ID" value="@entidad_bancaria.ID">
                  @entidad_bancaria.NOMBRE</option>
              }
            </select>
            @* <input type="text" name="entidad_bancaria" id="entidad_bancaria"> *@
          </div>
          <div class="campo" id="campo_puesto">
            <label for="puesto">Puesto</label>
            <select name="puesto" id="puesto">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var puesto in @Model.Puestos)
              {

                <option id="@puesto.ID_PUESTO" value="@puesto.ID_PUESTO">@puesto.NOMBRE</option>
              }
            </select>
            @* <input type="text" name="puesto" id="puesto"> *@
          </div>
          <div class="campo" id="campo_departamento">
            <label for="departamento">Departamento</label>
            <select name="departamento" id="departamento">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var departamento in @Model.Departamentos)
              {

                <option id="@departamento.ID_DEPARTAMENTO" value="@departamento.ID_DEPARTAMENTO">@departamento.NOMBRE
                </option>
              }
            </select>
            @* <input type="text" name="departamento" id="departamento"> *@
          </div>
          <div class="campo" id="campo_nivel_aprobacion">
            <label for="nivel_aprobacion">Nivel Aprobacion</label>
            <select name="nivel_aprobacion" id="nivel_aprobacion">
              <option value="default" disabled selected>Seleccionar</option>
              @foreach (var nivel_aprobacion in @Model.NivelesAprobacion)
              {

                <option id="@nivel_aprobacion.ID_NIVEL_APROBACION" value="@nivel_aprobacion.ID_NIVEL_APROBACION">
                  @nivel_aprobacion.ID_NIVEL_APROBACION</option>
              }
            </select>
            @* <input type="text" name="nivel_aprobacion" id="nivel_aprobacion"> *@
          </div>
          <div class="campo" id="campo_estatus">
            <label for="estatus">Estatus</label>
            <select name="estatus" id="estatus">
              <option value="default" disabled selected>Seleccionar</option>

              <option value="Activo">Activo</option>
              <option value="Suspendido">Suspendido</option>
              <option value="Inactivo">Inactivo</option>
            </select>
            @* <input type="text" name="estatus" id="estatus"> *@
          </div>
        </div>
      </div>
      <div class="campos-container">
        <div class="grupo informacion-familiar">
          <div class="titulo-grupo" id="titulo-informacion-familiar">
            <h2>Informacion familiar</h2>
          </div>
          <div class="campo" id="campo_nombre_familiar_primario">
            <label for="nombre_familiar_primario">Nombre familiar primario</label>
            <input type="text" name="nombre_familiar_primario" id="nombre_familiar_primario">
          </div>
          <div class="campo" id="campo_telefono_familiar_primario">
            <label for="telefono_familiar_primario">Telefono familiar primario</label>
            <input type="text" name="telefono_familiar_primario" id="telefono_familiar_primario">
          </div>
          <div class="campo" id="campo_parentesco_familiar_primario">
            <label for="parentesco_familiar_primario">Parentesco familiar primario</label>
            <select name="parentesco_familiar_primario" id="parentesco_familiar_primario">
              <option value="default" disabled selected>Seleccionar</option>

              <option value="Padre">Padre</option>
              <option value="Madre">Madre</option>
              <option value="Hermano/a">Hermano/a</option>
              <option value="Primo/a">Primo/a</option>
              <option value="Tio/a">Tio/a</option>
              <option value="Esposo/a">Esposo/a</option>
            </select>
            @* <input type="text" name="parentesco_familiar_primario" id="parentesco_familiar_primario"> *@
          </div>
          <div class="campo" id="campo_nombre_familiar_secundario">
            <label for="nombre_familiar_secundario">Nombre familiar secundario</label>
            <input type="text" name="nombre_familiar_secundario" id="nombre_familiar_secundario">
          </div>
          <div class="campo" id="campo_telefono_familiar_secundario">
            <label for="telefono_familiar_secundario">Telefono familiar secundario</label>
            <input type="text" name="telefono_familiar_secundario" id="telefono_familiar_secundario">
          </div>
          <div class="campo" id="campo_parentesco_familiar_secundario">
            <label for="parentesco_familiar_secundario">Parentesco familiar secundario</label>
            <select name="parentesco_familiar_secundario" id="parentesco_familiar_secundario">
              <option value="default" disabled selected>Seleccionar</option>

              <option value="Padre">Padre</option>
              <option value="Madre">Madre</option>
              <option value="Hermano/a">Hermano/a</option>
              <option value="Primo/a">Primo/a</option>
              <option value="Tio/a">Tio/a</option>
              <option value="Esposo/a">Esposo/a</option>
            </select>
            @* <input type="text" name="parentesco_familiar_secundario" id="parentesco_familiar_secundario"> *@
          </div>
        </div>
      </div>

      @* <div class="campos-container">
          <div class="grupo ">
            <div class="titulo-grupo" id="titulo-">
              <h2></h2>
            </div>
            <div class="campo" id="campo_">
              <label for=""></label>
              <input type="text" name="" id="">
            </div>
          </div>
        </div> *@
    </form>
  </div>
</section>