        <div class="campo">
          <span class="label">Telefono Familiar Secundario:</span>
          <span class="valor">@Model.TELEFONO_FAMILIAR_SECUNDARIO</span>
        </div>
        <div class="campo">
          <span class="label">Parentesco Familiar Secundario:</span>
          <span class="valor">@Model.PARENTESCO_FAMILIAR_SECUNDARIO</span>
        </div>
      </div>
    </div>
  </div>
</section>